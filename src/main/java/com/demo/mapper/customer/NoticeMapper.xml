</select>


<!-- 공지사항 content 보여줌 -->
<select id="select" resultType="com.demo.domain.customer.NoticeDto">
	SELECT 
		n_id,
		n_title,
		n_content,
		n_date,
		ad_id
	FROM  
		Notice
	WHERE
		n_id = #{n_id}
</select>




</mapper>